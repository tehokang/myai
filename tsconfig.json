{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
	"include": [
		"./**/*",
	],
	"exclude": [
		"dist/**/*",
	]
}
